<h3>Export <small>to various formats</small></h3>
<div class="btn-group  btn-group-lg" role="group" style="margin-bottom: 20px;">
  <a class="btn btn-default" href="<%= action_name %>.csv" download="<%= action_name %>_<%= Time.now.to_s.tr(' ','_') %>.csv">CSV</a>
  <a class="btn btn-default" href="<%= action_name %>.xls" download="<%= action_name %>_<%= Time.now.to_s.tr(' ','_') %>.xls">XLS</a>
  <a class="btn btn-default" href="<%= action_name %>.json" download="<%= action_name %>_<%= Time.now.to_s.tr(' ','_') %>.json">JSON</a>
<!--   |
  <a href="<%= action_name %>.rds" download="<%= action_name %>_<%= Time.now.to_s.tr(' ','_') %>.rds">RDS</a> -->
</div>

<div class="panel panel-default">
  <div class="panel-heading">Code (helpers for responding in various formats)</div>
  <div class="panel-body">
    <%=
      rouge(%{
        respond_to do |format|
          format.html
          format.csv  { send_data(dataframe.to_csv_string)                         }
          format.xls  { send_data(dataframe.to_excel_string)                       }
          format.json { send_data(dataframe.to_json_string(pretty: true))          }
        end
      })
    %>
  </div>
</div>
